@page "/"
@using BudgetPlusPlus.Data
@using BudgetPlusPlus.Domain
@inject BudgetPlusPlusContext Db
@inject AuthenticationStateProvider AuthState

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BudgetPlus+</title>

    <style>
        body {
          margin: 0;
          font-family: Arial, Helvetica, sans-serif;
          height: 100vh;
          background-color: #0f172a; /* dark blue */
          display: flex;
          justify-content: center;
          align-items: center;
          color: white;
        }

        .container {
          width: 100%;
          max-width: 900px; 
          padding: 40px 30px;
          background-color: #020617;
          border-radius: 20px;
          text-align: center;
          box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
        }

        h1 {
          font-size: 2.2rem;
          margin-bottom: 10px;
          color: #38bdf8;
        }

        h1 span {
          color: #22c55e;
        }

        p {
          font-size: 1rem;
          margin-bottom: 30px;
          color: #cbd5e1;
        }

        .welcome-box {
          background-color: #0f172a;
          padding: 25px;
          border-radius: 14px;
          margin-bottom: 30px;
        }

        button {
          padding: 14px;
          margin-bottom: 12px;
          font-size: 1rem;
          font-weight: bold;
          border: none;
          border-radius: 12px;
          cursor: pointer;
        }
        .button-row {
            display: flex;
            justify-content: center; /* center horizontally */
            gap: 20px; /* space between buttons */
            margin-top: 30px; /* spacing from content above */
        }

        .primary-btn {
          background-color: #22c55e;
          color: #020617;
        }

        .secondary-btn {
          background-color: #22c55e;
          border: 1px solid #38bdf8;
          color: #38bdf8;
        }
        .button-row button,
        .button-row .secondary-btn {
          flex: 1;
          width: 150px; /* fixed width for consistency */
        }

        button:hover {
          opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Budget<span>Plus</span>+</h1>
        <p>Simple budgeting. Full control.</p>

        <div class="welcome-box">
            Track expenses, manage savings, and stay on top of your finances — all in one place.
        </div>
        <div class="button-row">
            <button class="primary-btn">Get Started</button>
            <NavLink href="Account/Login" class="secondary-btn">
                Log In
            </NavLink>
        </div>
    </div>

</body>
</html>






